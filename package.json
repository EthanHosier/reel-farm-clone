{
  "name": "reel-farm",
  "version": "1.0.0",
  "description": "Reel Farm - Full-stack application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd server && air",
    "dev:backend:noauth": "cd server && air",
    "dev:backend:build": "cd server && go run cmd/main.go",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd server && go build -o bin/server cmd/main.go",
    "install:all": "npm install && cd frontend && npm install",
    "clean": "rm -rf frontend/dist frontend/node_modules server/bin server/tmp",
    "generate-api": "cd frontend && npm run generate-api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
